<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFF2E5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCzas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textSize="64sp" />

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="256dp"
                android:layout_height="64dp"
                android:layout_margin="32dp"
                android:backgroundTint="#76C31F"
                android:text="Start" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPauza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D52424"
                android:text="Pauza" />

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="#E3D025"
                android:text="Reset" />

            <Button
                android:id="@+id/buttonZapisz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#5764B5"
                android:text="Zapisz" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewZapisaneCzasy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zapisane czasy: \n"
                        android:textAlignment="center" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>