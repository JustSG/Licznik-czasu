<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFF2E5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewCzas"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:text="00:00:00" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="256dp"
        android:backgroundTint="#76C31F"
        android:layout_height="64dp"
        android:layout_margin="32dp"
        android:text="Start" />

    <Button
        android:id="@+id/buttonPauza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D52424"
        android:text="Pauza" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:backgroundTint="#E3D025"
        android:text="Reset" />

    <Button
        android:id="@+id/buttonZapisz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5764B5"
        android:text="Zapisz" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewZapisaneCzasy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Zapisane czasy: \n" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>